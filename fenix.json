{
  "$schema": "https://raw.githubusercontent.com/FenixTemplates/FenixTemplates/master/fenix-schema.json",
  "author": "JaimeArmas",
  "repoName": "CppTemplates",
  "repoUrl": "https://raw.githubusercontent.com/JaimeArmas/CppTemplates/master/",
  "version": 1.0,
  "templates": [
    {
      "id": "cppproject-template",
      "displayName": "Cpp Project Template",
      "description": "Create a C++ project structure with Makefile",
      "language": "C++",
      "category": [
          "Programming"
      ],
      "img": "https://upload.wikimedia.org/wikipedia/commons/1/18/ISO_C%2B%2B_Logo.svg",
      "directories": [
          ".vscode",
          "bin",
          "include",
          "lib",
          "src",
          "test"
      ],
      "files": {
          "download": [
              {
                  "from": "cpp/main.cpp",
                  "to": "src/main.cpp"
              },
              {
                  "from": "cpp/Makefile",
                  "to": "Makefile"
              },
              {
                  "from": "cpp/tasks.json",
                  "to": ".vscode/tasks.json"
              },
              {
                  "from": "cpp/launch.json",
                  "to": ".vscode/launch.json"
              },
              {
                  "from": "cpp/.editorconfig",
                  "to": ".editorconfig"
              },
              {
                  "from": "cpp/.clang-format",
                  "to": ".clang-format"
              }
          ],
          "open": [
              "src/main.cpp"
          ]
      }
    }
  ]
}
